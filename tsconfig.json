{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES2016",
    "rootDir": "./src",
    "emitDeclarationOnly": true
  }
}
